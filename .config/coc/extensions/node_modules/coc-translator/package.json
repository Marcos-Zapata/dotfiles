{
  "name": "coc-translator",
  "version": "1.6.4",
  "description": "Translation extension for coc.nvim",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/voldikss/coc-translator"
  },
  "publisher": "voldikss",
  "keywords": [
    "coc.nvim",
    "translation",
    "translator"
  ],
  "engines": {
    "coc": "^0.0.79"
  },
  "homepage": "https://github.com/voldikss/coc-translator",
  "scripts": {
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "build:types": "node scripts/gen_package_type.js",
    "build:webpack": "webpack --mode production",
    "build:doc": "ts-node ./scripts/gendoc.ts",
    "build": "run-s build:types build:webpack build:doc",
    "prepare": "run-s clean build"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Translator",
      "properties": {
        "translator.toLang": {
          "type": "string",
          "default": "zh_CN",
          "anyOf": [
            {
              "enum": [
                "zh_CN",
                "zh_TW",
                "en",
                "fr",
                "de",
                "ja",
                "ko",
                "ru"
              ]
            },
            {
              "type": "string"
            }
          ],
          "description": "Target language type, input it if it's not fould in the candidates"
        },
        "translator.engines": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "bing",
            "google",
            "youdao",
            "haici"
          ]
        },
        "translator.enableHover": {
          "type": "boolean",
          "default": false,
          "description": "Translate when mouse hover"
        },
        "translator.window.enableBorder": {
          "type": "boolean",
          "default": true
        },
        "translator.window.maxWidth": {
          "type": "number",
          "default": 80
        },
        "translator.window.maxHeight": {
          "type": "number",
          "default": 20
        }
      }
    },
    "commands": [
      {
        "title": "show translation",
        "command": "translator.popup"
      },
      {
        "title": "Echo translation",
        "command": "translator.echo"
      },
      {
        "title": "replace word with translation",
        "command": "translator.replace"
      },
      {
        "title": "open history file",
        "command": "translator.exportHistory"
      }
    ]
  },
  "author": "dyzplus@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.19",
    "@types/uuid": "^8.3.0",
    "@types/xml2js": "^0.4.7",
    "@voldikss/tsconfig": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "coc.nvim": "^0.0.80",
    "request-light": "^0.4.0",
    "eslint": "^7.16.0",
    "json-schema-to-typescript": "^10.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "xml2js": "^0.4.23"
  }
}
